<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.multicafe.dao.RecentMapper">
	<resultMap type="Recent" id="recent_resultMap">
		<result column="recent_id" property="recentId"/>
		<result column="user_id" property="userId"/>
		<result column="menu_id" property="menuId"/>
	</resultMap>
	
	<!-- ListView -->
	<select id="listViewRecent" resultMap="likes_resultMap">
		select from recent where user_id=#{userId}))
	</select>
	
	<!-- Insert -->
	<insert id="insertRecent" parameterType="java.lang.Integer">
		<selectKey keyProperty="recentId" resultType="Integer" order="BEFORE">
			select recent_seq.nextval from dual
		</selectKey>
		insert into recent values(#{recentId}, #{userId}, #{menuId})
	</insert>
</mapper>